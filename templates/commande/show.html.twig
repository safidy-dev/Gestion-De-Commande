{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Numc</th>
                <td>{{ commande.numc }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ commande.client.nom }}</td>
            </tr>
            <tr>
                <th>DateComm</th>
                <td>{{ commande.dateComm ? commande.dateComm|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <table class="table table-condensed">
                        <thead class="thead-dark">
                            <tr>
                                <th class="col-md-2">Désignation Article</th>
                                <th class="col-md-1">Quantité</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for t in lcomm %}
                            <tr>
                                <td class="col-md-1">{{ t.produit.libelle }}</td>
                                <td class="col-md-1">{{ t.qte }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>

    <a href="{{ path('commande_index') }}">back to list</a>

    <a href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>

    {{ include('commande/_delete_form.html.twig') }}
{% endblock %}
