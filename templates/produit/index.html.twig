{% extends 'base.html.twig' %}

{% block title %}Produit | Gestion de Commande{% endblock %}

{% block entete %}
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
             <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h4 class="page-title">Produit</h4>
                        <div class="ml-auto text-right">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="{{ path('produit_index') }}">Produit</a></li>
                                    <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('categorie_index') }}">Catégorie</a></li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
{% endblock %}

{% block body %}
    <h1>Liste de Produits</h1>

    <div style="position: absolute; right: 0; margin-top: -50px; margin-right: 20px;">
        <a href="{{ path('produit_new') }}" class="btn btn-success">Nouveau Produit</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Qte</th>
                <th>Pu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.qte }}</td>
                <td>{{ produit.pu }}</td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}" class="btn btn-info btn-sm" style="margin-bottom: 5px;">Détails</a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}" class="btn btn-dark btn-sm" style="margin-bottom: 5px;">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    

{% endblock %}
