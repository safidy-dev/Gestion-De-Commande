{% block body %}
    <h1>Détails du Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ produit.libelle }}</td>
            </tr>
            <tr>
                <th>Qte</th>
                <td>{{ produit.qte }}</td>
            </tr>
            <tr>
                <th>Pu</th>
                <td>{{ produit.pu }}</td>
            </tr>
        </tbody>
    </table>
    <hr/>
    <button class="btn btn-success"><a href="{{ path('produit_edit', {'id': produit.id}) }}" style="color: #fff;">Modifier</a></button>
    <button class="btn" style="position: relative; margin-left: 5px; padding: 7px 15px;"><a href="{{ path('produit_index') }}" style="color: #343a40;">Retour</a></button>
{% endblock %}
